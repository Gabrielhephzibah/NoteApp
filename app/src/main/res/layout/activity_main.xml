<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:background="#12225B">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:textColor="#1E70D1"
            android:textSize="30dp"
            android:layout_marginTop="13dp"
            android:gravity="center_horizontal"
            android:text="MY NOTEAPP"
            />
    </LinearLayout>

    <LinearLayout
        android:onClick="showDetails"
        android:layout_width="match_parent"
        android:layout_height="123dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="12dp">
            <ImageView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star"
                />
            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="60dp"
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="@string/heading"/>

            <TextView
                android:id="@+id/content"
               android:layout_below="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:paddingLeft="60dp"
                android:layout_marginTop="10dp"
                android:textSize="12dp"
                android:fontFamily="@font/roboto"
                android:textStyle="normal"
                android:lineSpacingMultiplier="1.3"
                android:text="Here's a twist on the traditional product review post. Instead of just reviewing a product, we're going to do a product......................."/>
        </RelativeLayout>


    </LinearLayout>
    <View
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#12225B" />

</LinearLayout>